                  </select>
                </label>
                <label>
                  Lab:
                  <select name="lab" id="edit-lab" required>
                    {{#each labs}}
                      <option value="{{this._id}}">Lab {{this.number}} ({{this.class}})</option>
                    {{/each}}
                  </select>
                </label>
                <label>
                  Row:
                  <input type="number" name="row" id="edit-row" min="1" max="7" required />
                </label>
                <label>
                  Column:
